<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.PSVM.dopamin.dao.ItemUserMapper">
    <select id="addCart" parameterType="Cart_ItemDto">
        INSERT INTO CART_ITEM(item_id,cart_id,in_date,in_user,up_user)
        VALUES(#{item_id},#{cart_id},now(),#{in_user},#{up_user})
    </select>
    <select id="find_item" parameterType="int" resultType="int">
        SELECT item_id
        FROM ITEM
        WHERE item_id=#{item_id}
    </select>
    <select id="item_stat" parameterType="int" resultType="int">
        SELECT stat
        FROM ITEM
        WHERE item_id=#{item_id}
    </select>
</mapper>



